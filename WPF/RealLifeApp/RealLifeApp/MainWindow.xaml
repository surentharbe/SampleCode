<Window x:Class="RealLifeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Button Name="button1" FontSize="20" Content="Install the Plugin (Background Thread)" HorizontalAlignment="Left" Height="44" Margin="10,0,0,0" Width="497" Click="button1_Click"/>
            <Button Name="button2" FontSize="20" Content="Display the Counter (UI Thread)" HorizontalAlignment="Left" Height="40" Margin="90,0,0,0" Width="311" Click="button2_Click"/>
            <StackPanel>
                <Grid Margin="10">
                    <ProgressBar Visibility="Collapsed" Background="DeepPink" Name="pBar" Width="300" Height="20" Minimum="0" Maximum="1"/>
                    <TextBlock Name="tb1" HorizontalAlignment="Center"> Progress Status </TextBlock>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
